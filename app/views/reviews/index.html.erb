<% provide(:title, "Home") %>
<%= render "partials/navbar" %>
<p id="notice"><%= notice %></p>
<div class="container">
<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>User</th>
      <th>Tour</th>
      <th>Booking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.subject %></td>
        <td><%=User.find(review.user_id).first_name%></td>
        <td><%= Tour.find(review.tour_id).Name %></td>
        <td><%= review.booking_id %></td>
        <td><%= link_to 'Show', review %></td>
        <% if current_user.is_admin || current_user.is_customer%>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= button_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

 </div> 
